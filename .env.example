# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# MongoDB Configuration
# Get this from MongoDB Atlas or your local MongoDB instance
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ems?retryWrites=true&w=majority

# JWT Secret
# Generate a strong random string using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-to-a-strong-random-string

# Node Environment
# Use 'development' for local, 'production' for deployment
NODE_ENV=development

# API Base URL
# For local development: http://localhost:3000
# For production: https://your-site.netlify.app
NEXT_PUBLIC_API_BASE=http://localhost:3000

# Optional: Mock Data (set to 0 for real data, 1 for mock data)
NEXT_PUBLIC_USE_MOCK=0
